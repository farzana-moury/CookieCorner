<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".infoFragments.RatingsInfoFragment">


    <TextView
        android:id="@+id/customerName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/name_height"
        android:layout_margin="@dimen/descriptionPadding"
        android:background="@drawable/side_nav_bar"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/accountHeader" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customerPic"
            android:layout_width="@dimen/ratings_image"
            android:layout_height="match_parent"
            android:padding="@dimen/descriptionSize"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/customerReview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:fontFamily="@font/abhaya_libre_bold"
            android:gravity="center"
            android:padding="@dimen/descriptionPadding"
            android:text="@string/textview"
            android:textAlignment="viewStart"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="@dimen/paymentInfoSize"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customerRating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/desc_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/star_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/star_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/star_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/star_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/star_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24" />
    </LinearLayout>
</LinearLayout>