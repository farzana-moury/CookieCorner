<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_height"
        android:layout_weight="1"
        android:fontFamily="@font/abhaya_libre_bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/descriptionPadding"
        android:text="@string/textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/descriptionMenu"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_height"
        android:layout_weight="1"
        android:fontFamily="@font/abhaya_libre_bold"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/descriptionPadding"
        android:text="@string/textview"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="@dimen/menu_price"
        android:textStyle="bold" />
</LinearLayout>