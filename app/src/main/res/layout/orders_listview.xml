<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/orderName"
        android:layout_width="@dimen/order_name"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/titlePadding"
        android:layout_weight="1"
        android:fontFamily="@font/abhaya_libre_bold"
        android:text="@string/textview"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/descriptionMenu"
        android:textStyle="bold" />

    <Button
        android:id="@+id/removeOrderButton"
        android:layout_width="@dimen/remove_order"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/titlePadding"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        android:text="Remove"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/paymentInfoSize" />
</LinearLayout>